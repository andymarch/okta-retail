<div class="col-md-6 order-md-1 mb-4 text-center"><h4 class="mb-3">Prove it</h4>
<hr class="mb-4">
<div class="row justify-content-center">
    
        <form action="/customer/existing/authenticate/password" method="POST">
            
            <div class="form-group">
                <label for="firstName">Password</label>
                <input class="form-control" type="password" name="password">
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Continue</button>
            </div>

            {{#if sms}}
                <div><small class="text-muted">You have the option to login with SMS</small></div>
                <a href="/customer/existing/authenticate/sms">Login with SMS</a>
            {{/if}}
        </form>
    </div>
</div>